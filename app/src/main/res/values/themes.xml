<resources>
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/main_screen_background</item>

        <!-- Customize your theme here. -->
        <item name="main_screen_background">@color/main_screen_background</item>
        <item name="main_screen_title_color">@color/main_screen_title_color</item>
        <item name="main_screen_text_color">@color/main_screen_text_color</item>
        <item name="main_screen_background_tint">@color/main_screen_background_tint</item>

        <item name="settings_header_text_color">@color/settings_header_text_color</item>
        <item name="settings_screen_background">@color/settings_screen_background</item>
        <item name="settings_text_color">@color/settings_text_color</item>
        <item name="settings_icon_fill_color">@color/settings_icon_fill_color</item>

        <item name="search_screen_background">@color/search_screen_background</item>
        <item name="search_field_background">@color/search_field_background</item>
        <item name="search_field_text_color">@color/search_field_text_color</item>
        <item name="search_field_hint_color">@color/search_field_hint_color</item>

        <item name="search_title_button_color">@color/search_field_hint_color</item>

        <item name="search_screen_item_track_name_color">@color/black</item>
        <item name="search_screen_item_artist_name_color">@color/yp_text_gray</item>
        <item name="search_screen_item_track_time_color">@color/yp_text_gray</item>
        <item name="search_screen_not_found_image_color">@color/yp_black</item>

        <item name="search_screen_search_history_text_color">@color/yp_black</item>
        <item name="search_screen_search_history_button_color">@color/yp_black</item>
        <item name="search_screen_search_history_button_text_color">@color/white</item>

        <item name="track_screen_background">@color/yp_white</item>
        <item name="track_screen_track_name_color">@color/black</item>
        <item name="track_screen_track_artist_color">@color/black</item>
        <item name="track_screen_text_color">@color/yp_text_gray</item>
        <item name="track_screen_text_value_color">@color/black</item>

        <item name="bottom_button_active_color">@color/yp_blue</item>
        <item name="bottom_button_not_active_color">@color/yp_black</item>

        <item name="create_playlist_screen_hint_text_color">@color/yp_black</item>
    </style>
</resources>