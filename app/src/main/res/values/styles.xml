<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainScreenContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/main_screen_background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="MainScreenTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingBottom">@dimen/main_screen_text_padding_bottom</item>
        <item name="android:textColor">?attr/main_screen_title_color</item>
        <item name="android:textSize">@dimen/main_screen_title_size</item>
    </style>

    <style name="MainScreenButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/button_margin_top</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/main_screen_background_tint</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/main_screen_text_color</item>
        <item name="android:textSize">@dimen/main_screen_text_size</item>
        <item name="cornerRadius">@dimen/main_screen_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_screen_button_icon_padding</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SettingsScreenContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/settings_screen_background</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ScreenTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/settings_header_text_color</item>
        <item name="android:textSize">@dimen/settings_header_text_size</item>
    </style>

    <style name="SettingsScreenText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">?attr/settings_text_color</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SettingsScreenImageButton">
        <item name="android:layout_width">@dimen/settings_icon_width</item>
        <item name="android:layout_height">@dimen/settings_icon_height</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:fillColor">?attr/settings_icon_fill_color</item>
    </style>

    <style name="SettingsScreenFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/settings_item_padding</item>
    </style>

    <style name="SearchScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?attr/search_screen_background</item>
    </style>

    <style name="SearchField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/search_field_background</item>
        <item name="android:drawablePadding">13dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">8.5dp</item>
        <item name="android:textColor">?attr/search_field_text_color</item>
        <item name="android:textColorHint">?attr/search_field_hint_color</item>
    </style>

</resources>





