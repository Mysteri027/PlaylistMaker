<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/margin_8dp">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="@dimen/image_size_45dp"
        android:layout_height="@dimen/image_size_45dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:src="@drawable/track_placeholder"
        tools:ignore="ImageContrastCheck" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playlist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_6dp"
            android:layout_marginBottom="@dimen/margin_1dp"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:maxLines="1"
            android:textSize="16sp"
            android:textColor="?attr/settings_text_color"
            tools:text="Smells Like Teen Spirit" />

        <TextView
            android:id="@+id/trakcs_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_5dp"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display"
            android:maxLines="1"
            android:textSize="11sp"
            android:textColor="?attr/search_screen_item_artist_name_color"
            tools:ignore="TextContrastCheck"
            tools:text="18 треков" />
    </LinearLayout>

</LinearLayout>