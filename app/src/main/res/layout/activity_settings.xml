<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SettingsScreenContainer">


    <TextView
        android:id="@+id/setting_title"
        style="@style/ScreenTitle"
        android:text="@string/settings"
        app:drawableStartCompat="@drawable/back_button" />

    <FrameLayout style="@style/SettingsScreenFrameLayout">

        <TextView
            style="@style/SettingsScreenText"
            android:text="@string/dark_theme" />

        <Switch
            style="@style/SettingsScreenImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck" />

    </FrameLayout>

    <FrameLayout style="@style/SettingsScreenFrameLayout">

        <TextView
            style="@style/SettingsScreenText"
            android:text="@string/share_app" />

        <ImageView
            android:id="@+id/share_button"
            style="@style/SettingsScreenImageButton"
            android:src="@drawable/share_icon" />

    </FrameLayout>

    <FrameLayout style="@style/SettingsScreenFrameLayout">

        <TextView
            style="@style/SettingsScreenText"
            android:text="@string/write_to_support" />

        <ImageView
            android:id="@+id/support_button"
            style="@style/SettingsScreenImageButton"
            android:src="@drawable/support_icon" />

    </FrameLayout>

    <FrameLayout style="@style/SettingsScreenFrameLayout">

        <TextView
            style="@style/SettingsScreenText"
            android:text="@string/user_agreement" />

        <ImageView
            android:id="@+id/arrow_forward_button"
            style="@style/SettingsScreenImageButton"
            android:src="@drawable/arrow_forward_icon" />

    </FrameLayout>


</LinearLayout>