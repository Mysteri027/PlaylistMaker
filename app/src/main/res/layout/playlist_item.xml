<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/margin_16dp"
    android:elevation="@dimen/margin_8dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/corner_radius_8dp">

    <ImageView
        android:id="@+id/playlist_item_image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/track_placeholder" />

    <TextView
        android:id="@+id/playlist_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_4dp"
        android:layout_marginTop="@dimen/margin_164dp"
        android:layout_marginEnd="@dimen/margin_4dp"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:maxLines="1"
        android:text="Best songs 2021"
        android:textColor="?attr/settings_text_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/playlist_item_tracks_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_regular"
        android:maxLines="1"
        android:layout_marginStart="@dimen/margin_4dp"
        android:layout_marginEnd="@dimen/margin_4dp"
        android:layout_marginTop="@dimen/margin_180dp"
        android:ellipsize="end"
        android:text="98 треков"
        android:textColor="?attr/settings_text_color"
        android:textSize="12sp" />

</androidx.cardview.widget.CardView>